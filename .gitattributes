     //Fonction, car retourne un type String (mots-clés : String de retour, return)
public static String funcImprime(String prenom, String nom){
        String [] tableau = new String[2];
        tableau[0] = prenom;
        tableau[1] = nom;
        return "[FONCTION] Hello "+prenom+" "+nom;
    }

public static void funcProcedure(String prenom, String nom){
        String [] tableau = new String[2];
        tableau[0] = prenom;
        tableau[1] = nom;
        System.out.println("[PROCEDURE] Hello "+prenom+" "+nom);
    }

    
public static String [] tableau(){
        String [] tableau = new String[4];
        tableau[0] = "pomme";
        tableau[1] = "poire";
        tableau[2] = "courge";
        tableau[3] = "prune";
        return tableau;
    }

public void tableau2(){
        String [][] aliments = new String [2][2];
        aliments[0][0] = "pomme";
        aliments[0][1] = "poire";
        aliments[1][0] = "pomme de terre";
        aliments[1][1] = "tomate";

        for(int i = 0; i < aliments.length; i++){
            System.out.println("Ligne : "+i);
            for(int j = 0; j < aliments[i].length; j++){
                System.out.println("Colonne : "+j);
                System.out.println(aliments[i][j]);
            }
        }
    }


public static void searchmot() {
            String [] tableau = tableau();
    
            String search = "poire";
    
            for(int i=tableau.length-1; i>0; i--){
                if(search.equals(tableau[i])){
                    System.out.println("Trouvé le mot "+search+" à l'indexe : "+i);
                    break;
                }
            }
    
        }

public static void tableau3(){
            String [][] carnet = new String[3][2];
    
            carnet[0][0] = "Jean-Edward";
            carnet[0][1] = "077 558 99 66";
    
            //2ème ligne, 1ère colonne
            carnet[1][0] = "Emilio";
            //2ème ligne, 2ème colonne
            carnet[1][1] = "055 225 5522";
    
            carnet[2][0] = "Issac";
            carnet[2][1] = "005 111 22 55";
    
    
            
            System.out.println("Entrez le prénom");
            String prenom = scanner.nextLine();
    
            for(int i=0; i<carnet.length; i++){
                if(prenom.equals(carnet[i][0])){
                    System.out.println(carnet[i][1]);
                }
            }
        }


public static void operations2(){
            boolean decision = true;
    
            Scanner scanner = new Scanner(System.in);
    
            while(decision){
    
                System.out.println("Quelle veleur donnes-tu au premier numéro ?");
                int num1 = scanner.nextInt();
                System.out.println("Quelle valeur donnes-tu au deuxième numéro ?");
                int num2 = scanner.nextInt();
    
                System.out.println("Quelle opération veux-tu effectuer [ +, %, / ] ?");
                String operation = scanner.next();
    
                switch(operation){
                    case "+" : System.out.println("Résultat : "+num1 + num2); break;
                    case "%" : System.out.println("Résultat : "+num1 % num2); break;
                    case "/" :
                        while(num2 == 0){
                            System.out.println("Redonnez une valeur au num2, car elle vaut 0");
                            num2 = scanner.nextInt();
                        }
                        System.out.println("Résultat : "+num1 / num2); break;
                    default: System.out.println("Opération non-valide");
                }
    
                String sortir = "empty";
    
                while (!"oui".equals(sortir) && !"non".equals(sortir)){
                    System.out.println("Voulez-vous sortir ? (oui/non)");
                    sortir = scanner.next();
                }
    
                if(sortir.equals("oui")){
                    decision = false;
                }
            }
    
            System.out.println("Aurevoir, à bientôt");
    
        }

public static int modulo(int a, int b)
    {
        return a % b;
    }


public static void operateurs()
    {
        System.out.println("Quelle valeur vous le donnez ou premier boolean?");
        boolean a = scanner.nextBoolean();
        System.out.println("Quelle valeur vous le donnez ou deuxieme boolean?");
        boolean b = scanner.nextBoolean();
        String[] tableau = new String[2];
        tableau[0] = "and";
        tableau[1] = "or";
        //Comparer la valeur de mes boolean
        for(int i=0; i < tableau.length ; i++)
        {
            switch(tableau[i])
            {
                case "and":
                    printand(a,b);
                    break;
                case "or":
                    printor(a,b);
                    break;
                default:
                    System.out.println("Erreur");
            }
        }
    }

public static void printand(boolean a, boolean b)
    {
        System.out.println("Le resultat de a " +a+ " and a " +a+ " est : " + (a && a));
        System.out.println("Le resultat de a " +a+ " and b " +b+ " est : " + (a && b));
        System.out.println("Le resultat de b " +b+ " and a " +a+ " est : " + (b && a));
        System.out.println("Le resultat de b " +b+ " and b " +b+ " est : " + (b && b));
    }


public static void printor(boolean a, boolean b)
    {
        System.out.println("Le resultat de a " +a+ " and a " +a+ " est : " + (a || a));
        System.out.println("Le resultat de a " +a+ " and b " +b+ " est : " + (a || b));
        System.out.println("Le resultat de b " +b+ " and a " +a+ " est : " + (b || a));
        System.out.println("Le resultat de b " +b+ " and b " +b+ " est : " + (b || b));
    }

    
