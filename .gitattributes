//Exercices 59

public static int bof(int val)
    {
    int i = val;
    boolean trouve = false;

    while (i <= 25 && !trouve)
    {
        if (i == 25) {
            trouve = true;
        }
        i++;
    }
    return i;
    }

public static void exercices59()
    {
        System.out.print("Entrez une valeur entière : ");
        int val = scanner.nextInt();
        int resultat = bof(val);
        System.out.println("Résultat : " + resultat);
    }


//Exercices 60

public static boolean suiteValeurs(int nb, int[] moyenneOut) {
        int[] valeurs = new int[nb];
        int somme = 0;
        boolean croissante = true;

        System.out.println("Veuillez entrer " + nb + " valeurs entières :");
        for (int i = 0; i < nb; i++) {
            valeurs[i] = scanner.nextInt();
            somme += valeurs[i];

            if (i > 0 && valeurs[i] <= valeurs[i - 1]) {
                croissante = false;
            }
        }

        moyenneOut[0] = somme / nb;
        return croissante;
    }

    public static void exercices60() {
        System.out.print("Combien de valeurs voulez-vous entrer ? ");
        int nb = scanner.nextInt();

        int[] moyenne = new int[1]; // Simule un paramètre de sortie
        boolean resultat = suiteValeurs(nb, moyenne);

        System.out.println("Moyenne des valeurs : " + moyenne[0]);

        if (resultat) {
            System.out.println("La suite est croissante.");
        } else {
            System.out.println("La suite n'est pas croissante.");
        }
    }

    public static void exercices61()
    {
        int temp;
        System.out.println("Dis moi la premiere valeur entier: ");
        int val1 = scanner.nextInt();
        System.out.println("Dis moi la deuxieme valeur entier: ");
        int val2 = scanner.nextInt();
        System.out.println("Dis moi la troisieme valeur entier: ");
        int val3 = scanner.nextInt();
        
        if(val1>val2)
        {
            temp = val1;
            val1 = val2;
            val2 = temp;
        }
        if(val1>val3)
        {
            temp = val1;
            val1 = val3;
            val3 = temp;
        }
        if(val2>val3)
        {
            temp = val2;
            val2 = val3;
            val3 = temp;
        }
        System.out.println("Valeurs triees: " +val1+ ", " +val2+ ", " +val3);
    }

