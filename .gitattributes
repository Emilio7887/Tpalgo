//Exercices 53
public static boolean carreparfait(int val)
    {
        if (val < 0)
        {
            return false;
        }
        int racine = (int) Math.sqrt(val);
        return (racine * racine == val);
    }

public static void exercices53()
    {
        boolean estCarreParfait = false;
        System.out.println("Dis moi un nombre: ");
        int val = scanner.nextInt();
            if (carreparfait(val))
            {
                estCarreParfait = true;
                System.out.println("Le nombre " +val+ " est un carré parfait "+estCarreParfait);
            }
            else
            {
                estCarreParfait = false;
                System.out.println("Le nombre " +val+ " n'est pas un carré parfait "+estCarreParfait);
            }
    }
