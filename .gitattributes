        tableau[3][0] = 0;

        for(int i=-0; i < tableau.length; i++)
        {
            for(int j = 0; j < tableau[i].length; j++)
            {
                if((tableau[i][0]) % 7 == 0 )
                {
                System.out.println(tableau[i][0] + " = 5");
