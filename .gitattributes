public static void exercices12()
    {
        Scanner scan = new Scanner(System.in);
        System.out.print("Quel est le prix HT de l'article ? ");
        double ht = scanner.nextDouble();

        System.out.print("Combien d'articles voulez-vous ? ");
        int nombre = scanner.nextInt();

        System.out.print("Quel est le taux de TVA (%) de cet article ? ");
        double tva = scanner.nextDouble();

        double prixTTC = (ht + (tva * ht / 100)) * nombre;
        System.out.printf("Le prix TTC total est de : %.2f CHF\n", prixTTC);

        scanner.close();
    }


