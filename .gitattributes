public static void exercices24()
    {
        System.out.println("Vous avez quelle age?");
        int age = scanner.nextInt();
        System.out.println("Vous etes quelle sexe?F/M");
        String sexe = scanner.next();
        if(age <20 && sexe.equals("M"))
        {
            System.out.println("Vous etes obligè payé les import pacque vous avez "+age+ " ans et vous etes un homme");
        }
        else if (age >18 && age < 35 && sexe.equals("F"))
        {
            System.out.println("Vous etes obligè payé les impot pacque vous avez " +age+ " ans et vous etes femme");
        }
        else
        {
            System.out.println("Vous n'etes pas obligè payé les impot");
        }
}


public static void exercices25()
    {
        System.out.println("Combien d`heures avez-vous travaillé?");
        int heures = scanner.nextInt();
        if (heures <= 8)
        {
            System.out.println("Vous avez travaillé " + heures + " votre salaire est de: " + (heures *25) + " CHF");
        }
        else
        {
            System.out.println("Vous avez fait " +(heures-8)+ " heures supplémentaires, votre salaire est de: " + ((8*25)+(heures - 8) * 30) + " CHF");
        }
    }

    //Problem quand je fais le test avec 8 candidats et un seul voix pour le premier candidat, il fait pas le 12,5%
public static void exercices26()
    {
        double candidat = 0 ;
        int candidats[] = new int[4];
        candidats[0] = 0;
        candidats[1] = 0;
        candidats[2] = 0;
        candidats[3] = 0;
        System.out.println("Dis moi combien de votant il y a?");
        int votant = scanner.nextInt();
        for(int i=0; i < votant; i++)
        {
            System.out.println("Vous etes le votant " +(i+1)+ " Dis moi quelle candidat vous avez choisi?(1,2,3,4)");
            candidat = scanner.nextDouble();
            
            /* Proposition chatgpt
             *  if (candidat >= 1 && candidat <= 4) {
                candidats[candidat - 1] += 1;
            } else {
                System.out.println("Candidat non valide");
            }
        }
             */
            if (candidat == 1)
            {
                candidats[0] = candidats[0] + 1;
            }
            else if(candidat == 2)
            {
                candidats[1] = candidats[1] + 1;
            }
            else if(candidat == 3)
            {
                candidats[2] = candidats[2] + 1;
            }
            else if(candidat == 4)
            {
                candidats[3] = candidats[3] + 1;
            }
            else
            {
                System.out.println("Candidat non valide");
            }
        }

        double pourcentage = candidats[0] * 100 / votant;


          // Vérifie qui est arrivé en tête
        int maxVoix = candidats[0];
        int indexMax = 0;
        for (int i = 1; i < candidats.length; i++) {
            if (candidats[i] > maxVoix) {
                maxVoix = candidats[i];
                indexMax = i;
            }
        }

        // Affiche le pourcentage du candidat 1
        System.out.println("Le candidat nº1 a obtenu " + pourcentage + " % des voix.");

        // Déterminer le statut du candidat 1
        if (pourcentage > 50.0) {
            System.out.println("Le candidat nº1 est élu au premier tour.");
        } else if (pourcentage >= 12.5 && indexMax == 0) {
            System.out.println("Le candidat nº1 est en ballottage favorable (arrivé en tête au 1er tour).");
        } else if (pourcentage >= 12.5 && indexMax != 0) {
            System.out.println("Le candidat nº1 est en ballottage défavorable (pas arrivé en tête).");
        } else {
            System.out.println("Le candidat nº1 est battu.");
        }
    
    }


public static void exercices27()
    {
        System.out.println("Pouvez vous me dire le valeaur de a=");
        int a = scanner.nextInt();
        System.out.println("Pouvez vous me dire le valeaur de b=");
        int b = scanner.nextInt();
        if (a>b)
        {
            int temp = a;
            a = b;
            b = temp;
            System.out.println("Le valeur de a : " +a+ " est inferieur a la valeur de b: " +b);
        }
        else if (a==b)
        {
            System.out.println("Le valeur de a : " +a+ " est egal a la valeur de b: " +b);
        }
        else
        {
            System.out.println("Le valeur de a : " +a+ " est superieur a la valeur de b: " +b);
        }
    }

public static void exercices28()
    {
        System.out.println("Dis moi la valeur de a");
        int a = scanner.nextInt();
        System.out.println("Dis moi la valeur de b");
        int b = scanner.nextInt();
        System.out.println("Dis moi la valeur de c");
        int c = scanner.nextInt();
        if (a > b )
        {
            int temp = a;
            a = b;
            b = temp;
        }
        if (b > c){
            int temp = b;
            b = c;
            c = temp;
        }
        if (a > b){
            int temp = a;
            a = b;
            b = temp;
        }
        System.out.println("Le valeur de a : " +a+ " est inferieur a la valeur de b: " +b+ " et le valeur de c: " +c+ " est superieur a la valeur de b: " +b);
        
    }

