public static void exercices19()
    {
        int res;
        int tableau[] = new int[10];
        tableau[0] = -100;
        tableau[1] = -30;
        tableau[2] = -3;
        tableau[3] = 20;
        tableau[4] = 30;
        tableau[5] = 99;
        tableau[6] = 100;
        tableau[7] = 230;
        tableau[8] = 500;
        tableau[9] = 2200;

        for(int i = 0; i < tableau.length; i++)
        {
            int a = tableau[i];
            if(a < -10)
            {
                res = -a;
                System.out.println("Res= " +res);
            }
            else if(a < 0)
            {
                res = 0;
                System.out.println("Res = " +res );
            }
            else if(a < 100)
            {
                if (a % 3 == 0)
                {
                    res = a / 3;
                    System.out.println("Res = " +res);
                }
                else
                {
                    res = a + 3;
                    System.out.println("Res = " +res);
                }
            }
            else
            {
                res = a % 1000;
                System.out.println("Res = " +res);
        }
        System.out.println("Valeur: "+a+ " Resultat: " +res);
            
            
        }
    }


public static void exercices20()
    {
        int tableau[] = new int[5];
        tableau[0] = -11;
        tableau[1] = -4;
        tableau[2] = 5;
        tableau[3] = 7;
        tableau[4] = 12;

    for (int i = 0; i < tableau.length; i++)
    {
        int a = tableau[i];
        int original = a;
        int res = 0 ;
        if(a<0){
        a= -a;
        }
        if( a % 2 == 0 )
        {
            res =a/2;
        }
        else
        {
            res = a * 2 ;
        }
        System.out.println("Valeur: "+original+ " Resultat: " +res);
    }
    }


