// Paramètres formels: val1, val2
// Parametres effectifs: toto , tata
// Variables locales : res, i

public static int calcul2(int val1, int val2)
    {
        int res = 0;
        for (int i = 1; i <= val2; i++)
        {
            res += val1;
        }
        return res;
    }
public static void exercices55()
    {
        int toto = 3;
        int tata = 1;

        int res = calcul2(2,3);
        System.out.println(+res);

        res =calcul2(toto,tata);
        System.out.println(+res);

        res=calcul2(tata*2,3);
        System.out.println(+res);

        res=calcul2(4, 5);
        System.out.println(+res);
    }

