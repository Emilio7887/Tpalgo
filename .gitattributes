public static void exercices22()
    {
        System.out.println("Dis moi l'heure: ");
        int heure = scan.nextInt();
        System.out.println("Dis moi les minutes: ");
        int minutes = scan.nextInt();
        System.out.println("Dis moi les secondes: ");
        int secondes = scan.nextInt();
        if(secondes == 59)
        {
            secondes = 0;
            minutes = minutes + 1;
            if(minutes == 60)
            {
                minutes = 0;
                heure = heure + 1;
                if(heure == 24)
                {
                    heure = 0;
                }
            }
        }
        else
        {
            secondes = secondes + 1;
        }
        System.out.println("Dans une seconde, il sera: " + heure + ":" + minutes + ":" + secondes);
    }


