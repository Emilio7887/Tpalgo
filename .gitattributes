//Exercices 63
//Version avec ArrayList
public static void exercices63()
    {
    ArrayList<Character> tableau = new ArrayList<>();

        System.out.println("Entrez une suite de caractères, terminez par le caractère '#' :");

        char caractere;
        do {
            caractere = scanner.next().charAt(0); // Lit un seul caractère

            if (caractere != '#')
            {
                tableau.add(caractere);
            }
        }
        while (caractere != '#');

        // Comptage des 'e'
        int compteurE = 0;
        for (char c : tableau) {
            if (c == 'e') {
                compteurE++;
            }
        }

        // Affichage du résultat
        System.out.println("Nombre d'occurrences du caractère 'e' : " + compteurE);

    }

public static void exercices63a()
    {
        final int TAILLE_MAX = 100;
        char[] tableau = new char[TAILLE_MAX];
        int index = 0;

        System.out.println("Entrez une suite de caractères un par un, terminez par le caractère '#' :");

        while (index < TAILLE_MAX) {
            char c = scanner.next().charAt(0); // lire un seul caractère

            if (c == '#') {
                break; // fin de saisie
            }

            tableau[index] = c;
            index++;
        }

        // Comptage des 'e'
        int compteurE = 0;
        for (int i = 0; i < index; i++) {
            if (tableau[i] == 'e') {
                compteurE++;
            }
        }

        // Affichage du résultat
        System.out.println("Nombre d'occurrences du caractère 'e' : " + compteurE);

    }

public static void exercices64()
        {
        final int TAILLE_MAX = 100;
        char[] tableau = new char[TAILLE_MAX];
        int index = 0;

        System.out.println("Entrez une suite de caractères un par un, terminez par le caractère '#' :");
        while(index < TAILLE_MAX)
            {
            char c = scanner.next().charAt(0); // lire un seul caractère
            if (c == '#')
            {
                break; // fin de saisie
            }
            if(c !='e' && c != 'o')
            {
                tableau[index] = c;
                index++;
            }
            System.out.println("Tableau sans 'e' et 'o': ");
            for (int i = 0; i < index; i++)
            {
                System.out.print(tableau[i] + " ");
            }
            System.out.println();
            }
        }
public static void exercices65()
    {
        System.out.println("Dis moi le nombre de valeurs a saisir: ");
        int n = scanner.nextInt();
        double tableau[] = new double[n];
        double somme = 0;
        for (int i = 0; i < n; i++)
        {
            System.out.print("Entrez la valeur numéro " + (i + 1) + " : ");
            tableau[i] = scanner.nextDouble();
            somme += tableau[i];
        }
        // Calcul de la moyenne
        double moyenne = somme / n;
        // Comptage des valeurs supérieures à la moyenne
        int compteur = 0;
        for (int i = 0; i < n; i++)
        {
            if (tableau[i] > moyenne)
            {
                compteur++;
            }
        }
        // Affichage des résultats
        System.out.println("La moyenne est : " + moyenne);
        System.out.println("Nombre de valeurs supérieures à la moyenne : " + compteur);
        
    }

/*Exercices 66
Que produit l’algorithme suivant ?
Déclaration
N : constante = 6 ;
tableau tab(N) : entier ;
i : entier ;
Début
i := 0;
tantque i < N faire tab[i] := i * i ; i := i + 1;
finfaire
i := 0;
tantque i < N faire
ecrire (tab[i]); ;
i := i + 1;
finfaire Fin
    /
    Il produit un tableau de 6 entiers
    0 1 4 9 16 25
    On peut la simplie si on elimine le tableau et on montre direct les valeurs dans une boucle for
    /
   */
public static void exercices66()
    {
        final int n = 6;

        for (int i = 0; i < n; i++) {
            System.out.println("Valeur " +(i+1)+ ": " +(i * i));
        }
    }
/*
 * Exercices 67
N : constante = 6 ; tableau tab(N) : entier ; i : entier ;
Début
tab[0] := 1 ;
tab[1] := 2 ;
i := 2;
tantque i < 6 faire
    tab[i] := tab[i-2] + 3 ;
    i := i + 1;
finfaire
i := 0;
tantque i < 6 faire
    ecrire (tab[i]);
    i := i + 1;
finfaire
Fin

//Il produit un tableau de 6 entiers avec la premier valeur de 1, la deuxieme valeur de 2 et les autres valeurs sont la somme de la valeur d'avant + 3
// 1 2 4 5 7 8
//On peut la simplie si on elimine le tableau et on montre direct les valeurs dans une boucle for
 */

public static void exercices67()
    {
        final int n = 6;
        int valMoinsDeux = 1; // tab[0]
        int valMoinsUn = 2;   // tab[1]
        System.out.println("Valeur 1: " + valMoinsDeux);
        System.out.println("Valeur 2: " + valMoinsUn);
        for (int i = 2; i < n; i++)
        {
            int valCourante = valMoinsDeux + 3;
            System.out.println("Valeur " + (i + 1) + ": " + valCourante);
            // mise à jour des valeurs pour la prochaine itération
            valMoinsDeux = valMoinsUn;
            valMoinsUn = valCourante;
        }
    }

public static void exercices68()
    {
        int tableau1[] = {4, 8, 7, 9, 1, 5, 4, 6};
        int tableau2[] = {7, 6, 5, 2, 1, 3, 7, 4};
        int tableau3[] = new int[tableau1.length];
        for (int i = 0; i < tableau1.length; i++)
        {
            tableau3[i] = tableau1[i] + tableau2[i];
        }
        System.out.println("Somme des deux tableaux:");
        for (int i = 0; i < tableau3.length; i++)
        {
            System.out.println(tableau3[i] + " ");
        }
        System.out.println();
    }

    //exercices 69
public static int calculerSchtroumpf(int[] tab1, int[] tab2) {
        int somme = 0;
        for (int i = 0; i < tab1.length; i++) {
            for (int j = 0; j < tab2.length; j++) {
                somme += tab1[i] * tab2[j];
            }
        }
        return somme;
    }
public static void exercices69()
    {
        int[] tab1 = {3, 6};
        int[] tab2 = {4, 8, 7, 12};

        int schtroumpf = calculerSchtroumpf(tab1, tab2);
        System.out.println("Le schtroumpf est : " + schtroumpf); 
    }

//exercices 70

public static void exercices70()
    {
        System.out.print("Entrez la taille du tableau (nb) : ");
        int nb = scanner.nextInt();

        int[] tab = new int[nb];

        // Saisie des valeurs
        System.out.println("Entrez " + nb + " valeurs entières différentes :");
        for (int i = 0; i < nb; i++) {
            System.out.print("Valeur " + (i + 1) + " : ");
            tab[i] = scanner.nextInt();
        }

        // Affichage avant échange
        System.out.print("\nAvant échange : ");
        for (int i = 0; i < nb; i++) {
            System.out.print(tab[i] + " ");
        }
        System.out.println();

        // Recherche des indices min et max
        int indiceMin = 0, indiceMax = 0;
        for (int i = 1; i < nb; i++) {
            if (tab[i] < tab[indiceMin]) {
                indiceMin = i;
            }
            if (tab[i] > tab[indiceMax]) {
                indiceMax = i;
            }
        }

        // Échange des valeurs min et max
        int temp = tab[indiceMin];
        tab[indiceMin] = tab[indiceMax];
        tab[indiceMax] = temp;

        // Affichage après échange
        System.out.print("Après échange  : ");
        for (int i = 0; i < nb; i++) {
            System.out.print(tab[i] + " ");
        }
        System.out.println();
    }

public static void exercices71()
    {
        System.out.print("Entrez la taille du tableau (NB) : ");
        int NB = scanner.nextInt();

        int[] tab = new int[NB];

        // Saisie des valeurs
        System.out.println("Entrez " + NB + " valeurs entières différentes :");
        for (int i = 0; i < NB; i++) {
            System.out.print("Valeur " + (i + 1) + " : ");
            tab[i] = scanner.nextInt();
        }

        // Affichage avant inversion
        System.out.print("\nAvant inversion : ");
        for (int i = 0; i < NB; i++) {
            System.out.print(tab[i] + " ");
        }
        System.out.println();

        // Inversion du tableau
        for (int i = 0; i < NB / 2; i++) {
            int temp = tab[i];
            tab[i] = tab[NB - 1 - i];
            tab[NB - 1 - i] = temp;
        }

        // Affichage après inversion
        System.out.print("Après inversion : ");
        for (int i = 0; i < NB; i++) {
            System.out.print(tab[i] + " ");
        }
        System.out.println();
    }

public static void exercices72()
    {
    System.out.print("Entrez un mot ou une phrase : ");
        String texte = scanner.nextLine();

        // Nettoyage : suppression des espaces et conversion en minuscules
        String nettoye = texte.replaceAll(" ", "").toLowerCase();

        // Inversion de la chaîne
        String inverse = new StringBuilder(nettoye).reverse().toString();

        // Vérification
        if (nettoye.equals(inverse))
        {
            System.out.println("C’est un palindrome");
        }
        else
        {
            System.out.println("Ce n’est pas un palindrome");
        }
    }

//Exercices 73
// Fonction qui cherche une valeur dans un tableau trié
public static boolean cherche(int[] tab, int valeur) {
        int debut = 0;
        int fin = tab.length - 1;

        while (debut <= fin)
        {
            int milieu = (debut + fin) / 2;

            if (tab[milieu] == valeur)
            {
                return true; // valeur trouvée
            } else if (tab[milieu] < valeur)
            {
                debut = milieu + 1;
            } else
            {
                fin = milieu - 1;
            }
        }
        return false; // valeur non trouvée
    }

public static void exercices73()
    {
        

        // Exemple de tableau trié
        int[] tab = {2, 5, 8, 12, 16, 23, 38, 45, 57, 63};

        // Saisie utilisateur
        System.out.print("Entrez une valeur à rechercher : ");
        int valeur = scanner.nextInt();

        // Appel de la fonction cherche
        if (cherche(tab, valeur))
        {
            System.out.println("La valeur existe dans le tableau.");
        }
        else
        {
            System.out.println("La valeur n'existe pas dans le tableau.");
        }
    }

//Exercices 74
// Fonction qui supprime toutes les occurrences d'une valeur et compacte le tableau
public static int supprimeVal(int[] tab, int nb1, int val)
    {
        int j = 0; // indice pour le nouveau tableau compacté

        for (int i = 0; i < nb1; i++)
        {
            if (tab[i] != val)
            {
                tab[j] = tab[i];
                j++;
            }
        }

        return j; // nb2 : nombre d’éléments restants
    }

public static void exercices74() {
        Scanner scanner = new Scanner(System.in);

        // Tableau de départ
        int[] tab = {5, 8, 9, 12, 5, 4, 6, 6, 5};
        int nb1 = tab.length;

        // Affichage du tableau initial
        System.out.print("Tableau initial : ");
        for (int i = 0; i < nb1; i++)
        {
            System.out.print(tab[i] + " ");
        }
        System.out.println();

        // Valeur à supprimer
        System.out.print("Entrez la valeur à supprimer : ");
        int val = scanner.nextInt();

        // Appel de la fonction
        int nb2 = supprimeVal(tab, nb1, val);

        // Affichage du tableau modifié
        System.out.print("Tableau après suppression : ");
        for (int i = 0; i < nb2; i++)
        {
            System.out.print(tab[i] + " ");
        }
        System.out.println("\nNombre d'éléments restants : " + nb2);
    }

//Exercices75
public static boolean consecutifs(int[] tab)
    {
        int n = tab.length;

        if (n == 0) return false;

        int min = tab[0], max = tab[0];

        // Trouver min et max
        for (int i = 1; i < n; i++)
        {
            if (tab[i] < min) min = tab[i];
            if (tab[i] > max) max = tab[i];
        }

        // Vérifier si max - min + 1 == n
        if (max - min + 1 != n)
        {
            return false;
        }

        // Vérifier doublons avec un tableau booléen
        boolean[] vu = new boolean[n];
        for (int i = 0; i < n; i++)
        {
            int index = tab[i] - min;
            if (vu[index])
            {
                return false; // doublon
            }
            vu[index] = true;
        }

        return true;
    }

public static void exercices75()
    {
        int[] tab1 = {11, 12, 13, 14, 15};
        int[] tab2 = {12, 11, 13, 15, 16}; // faux, manque 14

        System.out.println("Tab1 consécutifs ? " + consecutifs(tab1)); // true
        System.out.println("Tab2 consécutifs ? " + consecutifs(tab2)); // false
    }

public static void exercices76()
    {
        int[] tab1 = {4, 8, 4, 6, 8, 4, 3, 6, 2};
        int n = tab1.length;

        int[] tab2 = new int[n]; // valeurs uniques
        int nbdiff = 0;

        // Remplir tab2 avec des valeurs uniques
        for (int i = 0; i < n; i++)
        {
            boolean existe = false;
            for (int j = 0; j < nbdiff; j++)
            {
                if (tab1[i] == tab2[j])
                {
                    existe = true;
                    break;
                }
            }
            if (!existe)
            {
                tab2[nbdiff] = tab1[i];
                nbdiff++;
            }
        }

        // Afficher chaque valeur unique et son nombre d'occurrences
        for (int i = 0; i < nbdiff; i++)
        {
            int valeur = tab2[i];
            int compteur = 0;

            for (int j = 0; j < n; j++)
            {
                if (tab1[j] == valeur)
                {
                    compteur++;
                }
            }

            System.out.println(valeur + " apparaît " + compteur + " fois.");
        }
    }


public static void exercices77() {
        int[] tab = {8, 6, 4, 9, 2};
        int n = tab.length;

        System.out.println("Tableau initial : " + Arrays.toString(tab));

        for (int i = 0; i < n - 1; i++)
        {
            int minIndex = i;

            // Trouver l'indice du minimum dans la partie restante
            for (int j = i + 1; j < n; j++)
            {
                if (tab[j] < tab[minIndex])
                {
                    minIndex = j;
                }
            }

            // Échange si nécessaire
            if (minIndex != i)
            {
                int temp = tab[i];
                tab[i] = tab[minIndex];
                tab[minIndex] = temp;
            }

            // Affichage de l'étape
            System.out.println("Étape " + (i + 1) + " : " + Arrays.toString(tab));
        }

        System.out.println("FIN - Tableau trié : " + Arrays.toString(tab));
    }

/*Exercices 78
tab =

L1 = [0, 1, 2, 3, 4]
L2 = [1, 2, 3, 4, 5]
L3 = [2, 3, 4, 5, 6]
L4 = [3, 4, 5, 6, 7]

*/
public static void exercices78() {
        int[][] tab = new int[4][5];

        // Remplissage du tableau
        for (int i = 0; i < 4; i++)
        {
            for (int j = 0; j < 5; j++)
            {
                tab[i][j] = i + j;
            }
        }

        // Affichage du tableau
        System.out.println("Contenu du tableau tab :");
        for (int i = 0; i < 4; i++)
        {
            for (int j = 0; j < 5; j++)
            {
                System.out.print(tab[i][j] + "\t");
            }
            System.out.println();
        }
    }

/*Exercices 79
	    0	1	2	3	4
L=0	    0	0	0	0	0
L=1	    1	1	1	1	1
L=2	    2	2	2	2	2
L=3	    3	3	3	3	3
L=4	    4	4	4	4	4

res = 10
*/

public static void exercices79() {
        int[][] tab = new int[5][5];
        int res = 0;

        // Remplissage du tableau : chaque ligne contient la valeur de i
        for (int i = 0; i < 5; i++)
        {
            for (int j = 0; j < 5; j++)
            {
                tab[i][j] = i;
            }
        }

        // Somme des éléments de la diagonale principale
        for (int i = 0; i < 5; i++)
        {
            res += tab[i][i];
        }

        System.out.println("Résultat final : " + res);
    }

