public static int sommeentiers()
    {
        return n(n+1)/2;
    }
//Exercices 53
public static boolean carreparfait(int val)
    {
        if (val < 0)
        {
            return false;
        }
        int racine = (int) Math.sqrt(val);
        return (racine * racine == val);
    }

    public static void exercices53()
    {
        System.out.println("Dis moi un nombre: ");
        int val = scan.nextInt();
        if (carreparfait(val))
        {
            System.out.println("Le nombre " +val+ " est un carré parfait");
        }
        else
        {
            System.out.println("Le nombre " +val+ " n'est pas un carré parfait");
        }
    }
}