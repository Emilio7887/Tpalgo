public static void exercices31()
    {
        scan.useLocale(Locale.US);
        System.out.println("Dis moi votre poids: ");
        double poids = scan.nextDouble();
        System.out.println("Dis moi votre taille (en mètres, ex: 1.75): ");
        double taille = scan.nextDouble();
        double imc = poids / (taille * taille);
        if (imc < 19)
        {
            System.out.println("Votre IMC " +imc+ " est trop faible");
        }
        else if (imc <= 25)
        {
            System.out.println("Votre IMC " +imc+ " est normal");
        }
        else if (imc <= 30)
        {
            System.out.println("Votre IMC " +imc+ " est trop élevé");
        }
        else
        {
            System.out.println("Votre IMC " +imc+ " est trop élevé et vous risque d'avoir de problèmes");
        }
    }
public static void exercices32()
    {
        
        System.out.println("Dis moi votre age: ");
        int age = scan.nextInt();
        System.out.println("Depuis quand avex vous le permis? (en année): ");
        int permis = scan.nextInt();
        System.out.println("Combien dáccidentes avez-vous eu ? (nombre): ");
        int accidente = scan.nextInt();

            if (age < 25 && accidente == 0)
            {
                System.out.println("Vous avez le droit au tarif rouge ");
            }
            else if (age > 25 && permis > 2 && accidente == 0)
            {
                System.out.println("Vous avez le droit au tarif vert");
            }
            else if (age > 25 && permis > 2 && accidente == 1)
            {
                System.out.println("Vous avez le droit au tarif orange");
            }
            else if (age > 25 && permis > 2 && accidente  ==2)
            {
                System.out.println("Vous avez le droit au tarif rouge");
            }
            else
            {
                System.out.println("Vous etre refusé");
            }
    }


public static void exercices33()
    {
        
        System.out.println("Dis moi un jour: ");
        int jour = scan.nextInt();
        System.out.println("Dis moi un mois: ");
        int mois = scan.nextInt();
        System.out.println("Dis moi une année: ");
        int annee = scan.nextInt();
        if (jour > 31 || jour < 1)
        {
            System.out.println("Date non valide");
        }
        else if (mois > 12 || mois < 1)
        {
            System.out.println("Date non valide");
        }
        else if (annee < 0)
        {
            System.out.println("Date non valide");
        }
        else
        {
            System.out.println("Date valide");
        }
        if (mois == 2)
        {
            if(annee % 4 == 0 && jour > 29 || annee % 100 == 0 && jour > 28 || annee % 400 == 0 && jour > 29)
            {
                System.out.println("Date non valide");
            }
            else if (jour > 28)
            {
                System.out.println("Date non valide");
            }
            else
            {
                System.out.println("Date valide");
            }
        }
    }

public static void exercices34()
    {
        System.out.println("Dis moi le poids du colis en kg:");
        double poids = scan.nextDouble();
        System.out.println("Dis moi la largeur du colis en cm:");
        double largeur = scan.nextDouble();
        System.out.println("Dis moi la hauteur du colis en cm:");
        double hauteur = scan.nextDouble();
        System.out.println("Dis moi la longueur du colis en cm:");
        double longueur = scan.nextDouble();

        // Vérification de la validité
        if (poids < 0 || largeur < 0 || hauteur < 0 || longueur < 0) {
            System.out.println("Colis non valide");
            return;
        }
    
        // Colis hors norme
        if (poids > 10 || largeur > 50 || hauteur > 50 || longueur > 50) {
            System.out.println("Colis hors norme");
            return;
        }
    
        double volume = (largeur * hauteur * longueur) / 1000.0; // en dm³
        double taxe = 5.0;
    
        if (poids > 5 && poids <= 10) {
            taxe += 3.0; // surtaxe poids
        }
    
        if (volume > 27) {
            taxe += 3.0; // surtaxe encombrement
        }
    
        System.out.println("Le prix du colis est de " + taxe + " CHF");
    }


public static void exercices35()
    {
    System.out.println("Dis moi le montant de la facture: ");
    double facture = scan.nextDouble();
    if(facture < 0)
    {
        System.out.println("Facture non valide");
    }
    else if (facture < 2000)
    {
        System.out.println("Le montant de la facture est de " +facture+ " CHF");
    }
    else if (facture >= 2000 && facture < 4000)
    {
        System.out.println("Le montant de la facture est de " +facture+ " - 2% = "+ (facture - (facture * 0.02)) + " CHF");
    }
    else if (facture >= 4000 && facture < 7500)
    {
        System.out.println("Le montant de la facture est de " +facture+ " - 5% = "+ (facture - (facture * 0.05)) + " CHF");
    }
    else
    {
        System.out.println("Le montant de la facture est de " +facture+ " - 10% = "+ (facture - (facture * 0.10)) + " CHF");
    }
    }

