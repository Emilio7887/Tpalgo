public static void exercices48()
    {
        int compteur = 0;
        int somme = 0;
        int max = Integer.MIN_VALUE; // Corrected from Integrer to Integer
        int nbPaires = 0; // Declare nbPaires
        int nbImpaires = 0; // Declare nbImpaires

        for (int i = 0; ; i++) { // Infinite loop, will break on user input
            System.out.println("Dis moi un nombre: (0 pour terminer) ");
            int valeur = scanner.nextInt();
            if (valeur == 0) {
            break; // Exit the loop when the user enters 0
        }

                compteur++;
                somme += valeur;
                if (valeur > max) {
                    max = valeur;
                }

                if (valeur % 2 == 0) {
                    nbPaires++;
                } else {
                    nbImpaires++;
                }
            }

    if (compteur > 0) { // Avoid division by zero
        System.out.println("Nombre de valeurs: " + compteur);
        System.out.println("Valeur max: " + max);
        System.out.println("Nombre de paires: " + nbPaires);
        System.out.println("Nombre d'impaires: " + nbImpaires);
        System.out.println("Moyenne: " + (somme / (double) compteur));
        }
        else
        {
        System.out.println("Aucune valeur saisie.");
        }
    }


public static void exercices49()
    {
        System.out.print("Entrez vos valeurs (0 pou terminer): ");
        int maxLength = 0;
        int currentLength = 1;
        int previous = 0;
        boolean first = true;

        while (true) {
            int value = scanner.nextInt();
            if (value == 0) {
                break;
            }

            if (first) {
                previous = value;
                first = false;
            } else {
                if (value > previous) {
                    currentLength++;
                } else {
                    if (currentLength > maxLength) {
                        maxLength = currentLength;
                    }
                    currentLength = 1;
                }
                previous = value;
            }
        }

        if (currentLength > maxLength) {
            maxLength = currentLength;
        }

        System.out.println("Longueur de la plus longue séquence croissante : " + maxLength);
    }

public static void exercices50()
    {
        int compteur = 0;
        int etat = 0;
        char caractere;
        System.out.println("Dis moi une serie de caracteres:($ pour terminer) ");
        while(true)
        {
            caractere = scanner.next().charAt(0);
            if(caractere == '$')
            {
                break;
            }
            switch (etat) {
                case 0:
                if (caractere == 'b')
                etat = 1;
            
            break;
                case 1:
                if (caractere == 'o')
                {
                etat = 2;
                }
                else if (caractere == 'b')
                {
                    etat = 1;
                }
                else
                {
                    etat = 0;
                }
                break;
                case 2:
                if (caractere == 'n')
                {
                    compteur++;
                    etat = 0;
                }
                else if (caractere == 'b')
                {
                    etat = 1;
                }
                else
                {
                    etat = 0;
                }
                break;
            }
        }
        System.out.println("Le nombre de 'bon' est: " + compteur);
    }


public static void exercices51() {
        int min = 1;
        int max = 100;
        int essais = 0;
        boolean trouve = false;

        System.out.println("Pensez à un nombre entre 1 et 100");
        
        while (!trouve && min <= max) {
            int proposition = (min + max) / 2;
            essais++;
            System.out.print("Est-ce " + proposition + " ? (= / < / >) : ");
            String reponse = scanner.next();

            if (reponse.equals("=")) {
                trouve = true;
                System.out.println("J'ai trouvé le nombre en " + essais + " essais !");
            } else if (reponse.equals("<")) {
                max = proposition - 1;
            } else if (reponse.equals(">")) {
                min = proposition + 1;
            } else {
                System.out.println("Réponse invalide. Veuillez entrer '=', '<' ou '>'.");
                essais--; // ne pas compter cet essai
            }
        }

        if (!trouve) {
            System.out.println("Il semble y avoir une incohérence dans les réponses.");
        }

    }
